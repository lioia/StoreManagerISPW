<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="800.0" prefHeight="650.0"
      prefWidth="800.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/16"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.shoppingpoint.view.StoreDashboardGraphicController">
    <BorderPane minHeight="80.0" prefHeight="80.0" prefWidth="200.0"
                style="-fx-background-color: #ff6e6e; -fx-background-radius: 0 0 16 16;">
        <effect>
            <DropShadow/>
        </effect>
        <center>
            <Label fx:id="labelStoreName" text="Store Dashboard - Shopping Point" BorderPane.alignment="CENTER">
                <font>
                    <Font size="36.0"/>
                </font>
            </Label>
        </center>
        <right>
            <Button alignment="CENTER" mnemonicParsing="false" style="-fx-background-color: transparent"
                    BorderPane.alignment="CENTER">
                <graphic>
                    <FontIcon iconLiteral="mdal-account_circle" iconSize="32"/>
                </graphic>
                <BorderPane.margin>
                    <Insets right="16.0"/>
                </BorderPane.margin>
            </Button>
        </right>
    </BorderPane>
    <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
        <TextField prefHeight="64.0" prefWidth="544.0" promptText="Search for a product"
                   style="-fx-background-radius: 12;" HBox.hgrow="ALWAYS">
            <effect>
                <DropShadow/>
            </effect>
            <HBox.margin>
                <Insets left="48.0" top="32.0"/>
            </HBox.margin>
            <font>
                <Font size="24.0"/>
            </font>
        </TextField>
        <Button mnemonicParsing="false" prefHeight="48.0" prefWidth="120.0"
                style="-fx-background-color: #6EC6FF; -fx-background-radius: 16;" text="Search">
            <effect>
                <DropShadow/>
            </effect>
            <HBox.margin>
                <Insets left="48.0" right="40.0" top="40.0"/>
            </HBox.margin>
            <font>
                <Font size="24.0"/>
            </font>
        </Button>
    </HBox>
    <HBox alignment="TOP_CENTER" fillHeight="false">
        <VBox.margin>
            <Insets bottom="24.0" left="24.0" right="24.0" top="24.0"/>
        </VBox.margin>
        <Button mnemonicParsing="false" onAction="#goToClientList" prefHeight="48.0" prefWidth="176.0"
                style="-fx-background-color: #6EC6FF; -fx-background-radius: 16;" text="Client List"
                HBox.hgrow="ALWAYS">
            <effect>
                <DropShadow/>
            </effect>
            <font>
                <Font size="24.0"/>
            </font>
            <HBox.margin>
                <Insets left="6.0" right="6.0"/>
            </HBox.margin>
        </Button>
        <Button mnemonicParsing="false" prefHeight="48.0" prefWidth="176.0"
                style="-fx-background-color: #6EC6FF; -fx-background-radius: 16;" text="Summary" HBox.hgrow="ALWAYS">
            <effect>
                <DropShadow/>
            </effect>
            <font>
                <Font size="24.0"/>
            </font>
            <HBox.margin>
                <Insets left="6.0" right="6.0"/>
            </HBox.margin>
        </Button>
        <Button mnemonicParsing="false" prefHeight="48.0" prefWidth="176.0"
                style="-fx-background-color: #6EC6FF; -fx-background-radius: 16;" text="Add Product"
                HBox.hgrow="ALWAYS">
            <effect>
                <DropShadow/>
            </effect>
            <font>
                <Font size="24.0"/>
            </font>
            <HBox.margin>
                <Insets left="6.0" right="6.0"/>
            </HBox.margin>
        </Button>
        <Button mnemonicParsing="false" prefHeight="48.0" prefWidth="176.0"
                style="-fx-background-color: #6EC6FF; -fx-background-radius: 16;" text="Loyalty Card"
                HBox.hgrow="ALWAYS" onAction="#openEditCard">
            <effect>
                <DropShadow/>
            </effect>
            <font>
                <Font size="24.0"/>
            </font>
            <HBox.margin>
                <Insets left="6.0" right="6.0"/>
            </HBox.margin>
        </Button>
    </HBox>
    <ScrollPane fitToWidth="true" style="-fx-background-color: #ffffff;" VBox.vgrow="ALWAYS">
        <FlowPane fx:id="productsPane" />
    </ScrollPane>
</VBox>
