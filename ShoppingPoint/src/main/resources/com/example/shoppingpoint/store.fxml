            <Button alignment="CENTER" mnemonicParsing="false" style="-fx-background-color: transparent"
                    BorderPane.alignment="CENTER">
                <graphic>
                    <FontIcon iconLiteral="mdal-account_circle" iconSize="32"/>
                </graphic>
                <BorderPane.margin>
                    <Insets right="16.0"/>
                </BorderPane.margin>
            </Button>
        </right>
        <effect>
            <DropShadow/>
        </effect>
