                <Label layoutX="164.0" layoutY="160.0" style="-fx-font-size: 16px" text="Description"/>
                <Button layoutX="235.0" layoutY="255.0" mnemonicParsing="false" prefHeight="51.0" prefWidth="127.0"
                        style="-fx-background-radius: 15px; -fx-background-color: #6EC6FF;" text="Buy now">
                    <effect>
                        <DropShadow offsetY="2.0"/>
                    </effect>
                    <font>
                        <Font size="23.0"/>
                    </font>
                </Button>
            </AnchorPane>
        </FlowPane>
    </ScrollPane>
</VBox>
