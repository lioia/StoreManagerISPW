            <effect>
                <DropShadow/>
            </effect>
            <font>
                <Font size="24.0"/>
            </font>
        </Button>
    </HBox>
    <Label fx:id="loyaltyCardName">
        <font>
            <Font size="18.0"/>
        </font>
