<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.shoppingpoint.view.LoginGraphicController">
    <top>
        <HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0"
              style="-fx-background-color: #ff6e6e; -fx-background-radius: 0 0 16px 16px"
              BorderPane.alignment="CENTER">
            <effect>
                <DropShadow/>
            </effect>
            <Label text="Login - Shopping Point">
                <font>
                    <Font size="36.0"/>
                </font>
            </Label>
        </HBox>
    </top>
    <center>
        <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="520.0" prefWidth="800.0">
            <Label layoutX="301.0" layoutY="160.0" text="Username" AnchorPane.leftAnchor="100.0"
                   AnchorPane.topAnchor="90.0">
                <font>
                    <Font size="24.0"/>
                </font>
            </Label>
            <Label layoutX="159.0" layoutY="253.0" text="Password" AnchorPane.leftAnchor="100.0"
                   AnchorPane.topAnchor="230.0">
                <font>
                    <Font size="24.0"/>
                </font>
            </Label>
            <TextField fx:id="usernameTextField" layoutX="360.0" layoutY="38.0" prefHeight="40.0" prefWidth="384.0"
                       style="-fx-background-color: WHITE; -fx-background-radius: 12px" AnchorPane.leftAnchor="360.0"
                       AnchorPane.topAnchor="88.0">
                <effect>
                    <DropShadow/>
                </effect>
            </TextField>
            <PasswordField fx:id="passwordTextField" layoutX="370.0" layoutY="248.0" prefHeight="40.0" prefWidth="384.0"
                           style="-fx-background-color: WHITE; -fx-background-radius: 12px"
                           AnchorPane.leftAnchor="360.0"
                           AnchorPane.topAnchor="228.0">
                <effect>
                    <DropShadow/>
                </effect>
            </PasswordField>
            <Button mnemonicParsing="false" prefHeight="48.0" prefWidth="132.0" layoutX="100.0" layoutY="466.0"
                    style="-fx-background-color: #6EC6FF; -fx-background-radius: 16; -fx-font-size: 24px"
                    text="Register" onAction="#goToRegister" AnchorPane.leftAnchor="100.0" AnchorPane.topAnchor="440.0">
                <effect>
                    <DropShadow/>
                </effect>
            </Button>
            <Button defaultButton="true" layoutX="612.0" layoutY="480.0" mnemonicParsing="false" onAction="#login"
                    prefHeight="42.0" prefWidth="132.0"
                    style="-fx-background-color: #6EC6FF; -fx-font-size: 24px; -fx-background-radius: 16px;"
                    text="Login"
                    AnchorPane.leftAnchor="612.0" AnchorPane.topAnchor="440.0">
                <effect>
                    <DropShadow/>
                </effect>
            </Button>
        </AnchorPane>
    </center>
</BorderPane>
